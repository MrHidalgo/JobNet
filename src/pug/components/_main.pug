section#main.main

	#mainScroll-js.main__scroll

		.main__wrapper.main__wrapper-1

			.main__box-wrapper.main__box-wrapper-1
				-for(let idx = 0; idx < 20; idx++)
					div
						a.main__box(class!= 'main__box-' + idx href="#" data-val='small')
							img.main__img(src="img/img-box-small.jpg" srcset="img/img-box-small@2x.jpg 2x" alt="")

		.main__wrapper.main__wrapper-2

			.main__box-wrapper.main__box-wrapper-2
				-for (let idx = 0; idx < 20; idx++)
					div
						a.main__box(class!= 'main__box-' + idx href="#" data-val='medium')
							img.main__img(src="img/img-box-medium.png" srcset="img/img-box-medium@2x.png 2x" alt="")

		.main__wrapper.main__wrapper-3

			.main__box-wrapper.main__box-wrapper-3
				-for (let idx = 0; idx < 11; idx++)
					div
						a.main__box(class!= 'main__box-' + idx href="#" data-val='big')
							if(idx % 2 === 0)
								img.main__img(src="img/img-box-big-1.png" srcset="img/img-box-big-1@2x.png 2x" alt="")
							else
								img.main__img(src="img/img-box-big-2.png" srcset="img/img-box-big-2@2x.png 2x" alt="")

// SECTION :: END
